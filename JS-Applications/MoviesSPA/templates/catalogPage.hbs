{{> header}}
<h1 class="text-center">Movies</h1>
<section>
    <a href="/addMovie" class="btn btn-warning ">Add Movie</a>
    <form class="search float-right">
        <label>Search: </label>
        <input type="text">
        <input type="submit" class="btn btn-info" value="Search">
    </form>
</section>

{{#if anyMovies}}
{{#each movie}}
<div class="card mb-4">
    <img class="card-img-top" src="{{imageUrl}}"
        alt="Image of movie" width="400">
    <div class="card-body">
        <h4 class="card-title">{{title}}</h4>
    </div>
    <div class="card-footer">
        <a href="/details/{{id}}"><button type="button" class="btn btn-info">Details</button></a>
    </div>

</div>
{{/each}}
{{else}}
<p>There are no movies at this Moment, help us by uploading your favourite one </p>
{{/if}}

