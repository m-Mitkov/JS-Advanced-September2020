{{> header}}

<section id="viewCatalog" class="background-img">

    {{#if isUserLogedin}}
    {{#if hasDestinations}}
    <div class="added-destinations">

        {{#each destination}}
        <a href="/details/{{id}}" class="added-destination">
            <img src="{{imgUrl}}"
                alt="some picture" class="picture-added-destination">
            <h3>{{city}}</h3>
            <span>to {{city}} </span><span>{{departureDate}}</span>
        </a>
        {{/each}}
    </div>
    {{else}}
    <p>No destinations at the moment, <a href="/createDestination">Create one</a></p>
    {{/if}}
    {{else}}

    <div class="guest">
        No destinations possible! Please sign in...
    </div>

    {{/if}}
</section>

